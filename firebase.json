{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    },
    "run": {
      "memory": "512MiB",
      "secrets": [
        "GEMINI_API_KEY"
      ]
    }
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
